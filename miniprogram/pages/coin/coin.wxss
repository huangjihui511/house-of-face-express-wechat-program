/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.getCoinMethods {
  display: flex;
  flex-direction: column;
}

.line{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.getCoinCells {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.getCoinCell {
  display: flex;
  flex-direction: column;
}

.image_coin{
  width: 100px;
  height: 100px;
  border:none;
}

.coinButtonImage {
  padding: 0;
  margin:5rpx;
  width: 100px;
  height: 100px;
  align-items: center;
  justify-content: center;
  background-color: white;
}