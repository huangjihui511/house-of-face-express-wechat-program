<view class="bottom">
  <view class="iconView" bindtap="addText">
    <image src="../../images/text.png"></image>
    <text>添加文字</text>
  </view>
  <view class="iconView" bindtap="addLine">
    <image src="../../images/paint.png"></image>
    <text>图片涂鸦</text>
  </view>
  <view class="iconView" bindtap="addFilter">
    <image src="../../images/fliter.png"></image>
    <text>添加滤镜</text>
  </view>
  <view class="iconView" bindtap="addPhoto">
    <image src="../../images/joint.png"></image>
    <text>图片拼接</text>
  </view>
  <view class="iconView" bindtap="savePhoto">
    <image src="../../images/save.png"></image>
    <text>保存图片</text>
  </view>
</view>

<view class="{{save ? 'weui-show' :'weui-hidden'}}">
  <view class="weui-mask init" bindtap="touchStart" data-type="tap"></view>

  <view class="weui-half-screen-dialog">
    <view class="weui-half-screen-dialog__hd">
      <view class="weui-half-screen-dialog__hd__side" bindtap="touchStart" data-type="close">
        <view class="weui-icon-btn weui-icon-btn_close">关闭</view>
      </view>

      <view class="weui-half-screen-dialog__hd__main">
        <block>
          <text class="weui-half-screen-dialog__title">保存</text>
        </block>
      </view>
    </view>

    <view class="weui-half-screen-dialog__bd">
      <block>
        <button class='addTextBtn' type='primary' bindtap='saveLocal'>
            保存本地
        </button>
      </block>
    </view>

    <view class="weui-half-screen-dialog__ft">
      <block>
        <button class='addTextBtn' type='primary'  bindtap='upLoad'>
            上传云端
        </button>
      </block>
    </view>
  </view>
</view>

<view class="{{joint ? 'weui-show' :'weui-hidden'}}">
  <view class="weui-mask init" bindtap="touchStart" data-type="tap"></view>

  <view class="weui-half-screen-dialog">
    <view class="weui-half-screen-dialog__hd">
      <view class="weui-half-screen-dialog__hd__side" bindtap="touchStart" data-type="close">
        <view class="weui-icon-btn weui-icon-btn_close">关闭</view>
      </view>

      <view class="weui-half-screen-dialog__hd__main">
        <block>
          <text class="weui-half-screen-dialog__title">拼接</text>
        </block>
      </view>
    </view>

    <view class="weui-half-screen-dialog__bd">
      <block>
        <button class='addTextBtn' type='primary' bindtap='crosswise'>
            横向
        </button>
      </block>
    </view>

    <view class="weui-half-screen-dialog__ft">
      <block>
        <button class='addTextBtn' type='primary'  bindtap='lengthways'>
            纵向
        </button>
      </block>
    </view>
  </view>
</view>

