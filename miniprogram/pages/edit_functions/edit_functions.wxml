<view style='width:0px;height:0px;overflow:hidden;'>
  <canvas
    canvas-id="edit"
    style="width: {{cWidth}}px; height: {{cHeight}}px; position: absolute;left:-1000px;top:-1000px;"
  />
</view>

<view class="failText" wx:if="{{!choosed}}" bindtap="addImg">

</view>
<view wx:if="{{!choosed}}">
  <view class="page__hd">
          <view class="page__title">编辑表情</view>
          <view class="page__desc">目前支持添加文字，图片涂鸦，添加滤镜，图片拼接</view>
          <view class="page__desc">长按已选，重新选择照片</view>
  </view>
  <button class="weui-btn" type="primary" bindtap="addImg">从本地选择</button>
  
  <button class="weui-btn" type="primary" bindtap="addImg2">收藏夹选择</button>
  
</view>
<view class="canvasView" bindlongtap="addImg" wx:if="{{choosed}}" style="--height--: {{CVH}}px">
  <image src='{{curImage}}' style='width: {{cWidth}}px; height: {{cHeight}}px'></image>
</view>

