/* pages/edit_functions/edit_functions.wxss */

.canvasView {
  width: 750rpx;
  height: var(--height--);
  display: flex;
  justify-content: center;
  align-items: center;
}


.failText {
  margin-top: 200rpx;
  text-align: center;
  color: #888;
}

.bottom {
  width: 750rpx;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-around;
}

.bottom .iconView {
  text-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 25rpx;
  font-weight: bold;
  width: 100rpx;
  height: 100rpx;
  flex-direction: column;
  display: flex;
  align-items: center;
}

.bottom .iconView image{
  width: 60rpx;
  height: 60rpx;
}


.list-item {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0;
  border-radius: 50%;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.btnView{
  height: 45px;
  margin-top: 10px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chooseColorView{
  margin-top: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 40px;
}

.icon-item{
  display: block;
  padding: 16px 0;
  width: 33.33%;
  float: left;
  text-align: center;
}
.icon-item-name{
  font-size: 10px;
}

.colorView{
  width: 30px;
  height: 30px;
  border-radius: 15px;
}

.avatarView{
  width: 20%;
}

.addTextBtn{
  width: 80%;
  height: 44px;
}

.color-box {
  width: 375rpx;
  margin: 40rpx auto;
}

.slider {
  margin: 40rpx 60rpx;
}

