/**index.wxss**/

@import "/lib/shared.wxss";
@import "/lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}

.button_confirm{
  size:default;
  /**background-color: rgb(164, 164, 236);**/
  background-color: burlywood;
  color: white;
}

.conformFont{
  font-size: medium;
  color: white;
}

.showWhatToSearch{
  font-size: medium;
  margin: 10rpx;
}

.line{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.image_search{
  
  width: 100px;
  height: 100px;
  border:none;
}

.userinfo {
 /** display: flex;
  flex-direction: column;
  align-items: center; **/
  display:flex;
  flex-direction:row;
}

.userHead {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 20rpx;
  /**color: #aaa;**/
  color: black;
  font-size: medium;
}

.userNameDetail {
  display:flex;
  flex-direction: column;
}

.userName {
  padding-left: 20rpx;
}

.userDetail {
  display:flex;
  flex-direction: row;
  margin-left:20rpx;
  margin-right: 20rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}

.userDetailCell {
  display:flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.userDetailText {
  font-size: small;
}

.usermotto {
  margin-top: 200px;
}

.picShowList {
  display: flex;
  flex-direction: column;
  background-color: white;
}

.picShowRow {
  display:flex;
  flex-direction: row;
  margin: 20rpx;
}

.searchInputConfirm {
  display: flex;
  flex-direction: row;
  margin:20rpx;
}

.input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  width: 500rpx;
  background-color: white;
  border: 3rpx solid #D9D9D9;
}
.buttonImage {
  
  padding: 0;
  margin:20rpx;
  width: 100px;
  height: 100px;
  align-items: center;
  justify-content: center;
  background-color: white;
}
.buttonImage::after {
  border: none;
}

.cline {
  background: #E0E3DA;
  width: 5rpx;
  height: 80rpx;
}

