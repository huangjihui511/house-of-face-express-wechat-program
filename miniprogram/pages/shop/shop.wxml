<view class="container">
  <view class="userinfo">
    <button class="userHead" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image class="userHead" bindtap="bindViewTap" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <view class="userNameDetail">
        <view class="nameAndCoin">
          <view class="nameExp">
            <text class="userName">{{userInfo.nickName}}</text>
          </view>
          <view class="Coin">
            <text class="userRank">等级：{{user_rank}}</text>
            <view class="exp_bar" style="width:200rpx;height:30rpx">
              <view class="expBar" style="width:{{(user_exp/user_exp_Upbound)*200}}rpx;height:30rpx"></view>
              <view class="expBar_bg" style="width:{{(1-user_exp/user_exp_Upbound)*200}}rpx;height:30rpx"></view>
              <text class="expFont">{{user_exp}}/{{user_exp_Upbound}}</text>
            </view>
          </view>
