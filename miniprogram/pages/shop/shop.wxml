    </block>
  </view>
  <view class="search">
    <view class="showWhatToSearch">查找你想要的表情：{{toSearch}}</view>
    <view class="searchInputConfirm">
      <input class="input" auto-focus bindconfirm="bindConfirmClick" data-input="input"
         laceholder="请输入搜索关键字">
      </input>
      <button class="button_confirm" style="width:150rpx" bindtap="confirm" >
        <text class="confirmText" style="font-size:medium">确认</text>
       <!-- <view class="confirmFont"></view>-->
      </button>
    </view>
  </view>
  <view class="showWhatToSearch">猜你想要：</view>
  <view class="line"></view>
  <view class="picShowList">
    <view class="picShowRow" wx:for="{{showPicList}}" wx:for-index="index">
      <!--view wx:for="{{showPicList}}" wx:for-item="item" wx:key="*this"-->
        <button class="buttonImage" wx:for="{{showPicList[index]}}" wx:for-item="item" wx:key="*this"
           bindtap="shop_image_pagejump" data-image="{{item}}" data-fileid='{{item.file_id}}'>
          <image class='image_search' src="{{item.file_id}}"></image>
        </button>
      <!--/view-->
    </view> 
  </view>

  <view class="line"></view>

  <button class="uploadimage" bindtap="uploadimage">
    <text class="上传"></text>
  </button>
