/**index.wxss**/
@import "/lib/shared.wxss";
@import "/lib/weui.wxss";
page {
  background:rgb(252, 251, 251);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.logo{
  width: 100rpx;
  height: 100rpx;
}
.name{
  flex: 1;
}
.list{
  background-color: white;
}
.list_hd{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top:10rpx;
  margin-right: 10px;
  /* padding: 40px; */

}
.no_login{
  display: flex;
  flex-direction: row;
  flex: none;
  align-items: center;
}
.no_login_logo{
  width: 230rpx;
  height: 200rpx;
}
.no_login_text{
  background-color: white;
  font-size: large;
}
.login_button{
  background-color: white;
}

.userinfo {
  display:flex;
  flex-direction:row;
  flex: none;
  padding: 40px 0 0;
}

.userHead {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 20rpx;
  /**color: #aaa;**/
  color: black;
  font-size: medium;
}

.userNameDetail {
  display:flex;
  flex-direction: column;
}

.nameAndCoin {
  display:flex;
  flex-direction: column;
}

.userName {
  margin-left: 20rpx;
  margin-right: 10rpx;
  font-size: 40rpx;

}

.Coin {
  display: flex;
  flex-direction: row;
  /*margin-top: 10rpx;*/
  /**padding: 20rpx;**/
}

.nameExp {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.userRank {
  color:rgb(164, 164, 236);
  font-size: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 7rpx;
}

.exp_bar {
  display:flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.expBar {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-left-width: 2rpx;
  border-left-style: solid;
  border-left-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-left-radius: 10%;
  border-bottom-left-radius: 10%;
  margin-top: 10rpx;
  /*background-color:burlywood ;*/
  background-color:rgb(164, 164, 236);
}

.expBar_bg {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-right-width: 2rpx;
  border-right-style: solid;
  border-right-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-right-radius: 10%;
  border-bottom-right-radius: 10%;
  margin-top: 10rpx;
  background-color: white;
}

.expFont {
  font-size: small;
  color: rgb(164, 164, 236) ;
  margin-left: 10rpx;
  margin-top: 8rpx;
}

.page__hd {
  padding: 0 30rpx 40rpx;
}

.kind-list-item {
  margin: 5rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}