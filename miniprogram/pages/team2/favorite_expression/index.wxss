/**index.wxss**/

page {
  background:white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.empty{
  display: none;
}
.delete_logo{
  width: 50rpx;
  height: 50rpx;
}
.delete{
  position: fixed;
  bottom: 50rpx;
  height: 70rpx;
  width: 100%;
  background-color: rgb(252, 251, 251);
  color: rgb(76, 196, 126);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.image{
  height: 160rpx;
  width: 160rpx;
}
.load_image_login{
  height: 200rpx;
  width: 160rpx;
}
.image_selected{
  border: 3px double rgb(76, 196, 126);
}
.struct{
  display: flex;
  flex-wrap:wrap;
  justify-content:space-around;

}
.image_struct{
  flex-direction: column;
  flex-wrap:wrap;
  justify-content:space-around;
  margin: 30rpx;
}
 .select{
  background-color: rgb(252, 251, 251);
   display: flex;
   flex-direction:row;
   align-items: baseline;
 }
 .all_select{
  background-color: rgb(252, 251, 251);
  color: rgb(76, 196, 126);
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  font-size: 30rpx;
  text-align: center;
  height: 60rpx;
  width: 100rpx;
 }
 .select_number{
  background-color: rgb(252, 251, 251);
  position: fixed;
  bottom: 0rpx;
  left: 100rpx;
  font-size: 40rpx;
  height: 60rpx;
  width: 560rpx;
  text-align: center;
  color: rgb(100, 97, 97);
 }
 .select_text{
   color: rgb(76, 196, 126);
   background-color: rgb(252, 251, 251);
  position: fixed;
  bottom: 0rpx;
  right: 0rpx;
  font-size: 30rpx;
  text-align: center;
  height: 60rpx;
  width: 100rpx;
 }

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: rgb(252, 251, 251);
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: rgb(76, 196, 126);
}